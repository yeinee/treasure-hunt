<%= nested_form_for(@post, :html => {:multipart => true}) do |f| %>

  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> 를 다시 확인해주세요</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  <div class="col-md-2"></div>

  <div class="col-md-8">
    <div class="form-horizontal well bs-component">
    <!-- 제목, 내용 -->
      <div class="form-group" >
        <label for="post_title" class="col-md-2 control-label">Title</label>
        <div class="col-md-10">
          <input type="text" id="post_title" name="post[title]" class="form-control input-md" placeholder="제목을 입력하세요">
        </div>
      </div>
      <div class="form-group">
        <label for="post_description" class="col-md-2 control-label">Content</label>
        <div class="col-md-10">
          <textarea type="text" id="post_description" name="post[description]" class="form-control" rows="3" placeholder="내용을 입력하세요"></textarea>
        </div>
      </div>
      <!-- 제목, 내용 끝 -->
      <div class="col-md-12"><br></div> <!-- 공백 -->
      <!--  파일 업로드 -->
      <div class="form-group">
        <label for="exampleInputFile" class="col-md-2 control-label">File input</label>
        <div class="col-md-10">
          <%= f.fields_for :attachments do |a| %>
            <%= a.file_field :file %>
          <% end %>
        </div>
      </div>
      <!-- 파일 업로드 끝 -->
    </div>
  </div>
  <div class="col-md-2">
  </div>
</div>

<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <!-- 버튼 -->
    <div class="form-group actions">
      <button type="submit" class="pull-right btn btn-primary">쓰기</button>
    </div>
    <!-- 버튼 끝 -->
  </div>
  <div class="col-md-2"></div>
</div>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <!-- 질문 답변 -->
    <%= f.fields_for :questions, wrapper: false do |q| %>
    <div class="well bs-component form-horizontal">
      <div class="form-group q_field form-horizontal" >
        <label class="col-md-2 control-label">Question</label>
        <div class="col-md-9" style="padding-left:0px">
          <textarea class="form-control" rows="2" id="question_content" name="question[content]"></textarea>
          <textarea class="form-control" rows="2" id="question_answer" name="question[answer]"></textarea>
        </div>
        <div class="col-md-1"><%= q.link_to_remove "아니야 이건 안 낼래", class: "remove_question_btn"%></div>
      </div>
    </div>
    <% end %>
    <!-- 질문 답변 끝 -->
    <%= f.link_to_add "문제 추가", :questions, class: "add_question_btn btn btn-primary pull-right"%>
  </div>
  <div class="col-md-2"></div>
</div>
<% end %>





